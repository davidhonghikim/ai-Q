{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pantry Item Schema",
  "description": "Schema for atomic, reusable ingredients in the pantry system",
  "type": "object",
  "required": [
    "id",
    "type",
    "name",
    "version",
    "description",
    "atomic_steps",
    "author",
    "last_updated",
    "signature"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique registry ID for the ingredient",
      "pattern": "^[a-z0-9-]+:[a-z0-9-]+:[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": [
        "task:pull-docker-image:1.0.0",
        "skill:run-pytest:2.1.0"
      ]
    },
    "type": {
      "type": "string",
      "enum": [
        "task",
        "module",
        "skill",
        "tool",
        "config"
      ],
      "description": "Type of pantry item"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the ingredient",
      "minLength": 1,
      "maxLength": 100
    },
    "version": {
      "type": "string",
      "description": "Semantic version string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "description": {
      "type": "string",
      "description": "Detailed description of what this ingredient does",
      "minLength": 10,
      "maxLength": 500
    },
    "atomic_steps": {
      "type": "array",
      "description": "Exact, atomic steps to execute this ingredient",
      "items": {
        "type": "object",
        "required": [
          "step_id",
          "command",
          "description"
        ],
        "properties": {
          "step_id": {
            "type": "string",
            "pattern": "^[A-Z0-9-]+$"
          },
          "command": {
            "type": "string",
            "description": "Exact command to execute"
          },
          "description": {
            "type": "string",
            "description": "What this step does"
          },
          "expected_output": {
            "type": "string",
            "description": "Expected output for validation"
          },
          "error_handling": {
            "type": "string",
            "description": "How to handle errors in this step"
          }
        }
      },
      "minItems": 1
    },
    "inputs": {
      "type": "object",
      "description": "Required inputs for this ingredient",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "string",
              "number",
              "boolean",
              "file",
              "directory"
            ]
          },
          "required": {
            "type": "boolean"
          },
          "default": {
            "description": "Default value if not provided"
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "outputs": {
      "type": "object",
      "description": "Outputs produced by this ingredient",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "string",
              "number",
              "boolean",
              "file",
              "directory",
              "json"
            ]
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "description": "Registry IDs of other pantry items this depends on",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization and search",
      "items": {
        "type": "string"
      }
    },
    "author": {
      "type": "string",
      "description": "Creator or maintainer of this ingredient"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO timestamp of last update"
    },
    "signature": {
      "type": "string",
      "description": "Cryptographic or unique signature for auditability"
    },
    "caching": {
      "type": "object",
      "description": "Caching configuration for this ingredient",
      "properties": {
        "cacheable": {
          "type": "boolean",
          "description": "Whether this ingredient can be cached",
          "default": true
        },
        "cache_key": {
          "type": "string",
          "description": "Custom cache key (defaults to id:version if not specified)"
        },
        "cache_ttl": {
          "type": "number",
          "description": "Time to live for cache in seconds",
          "default": 3600
        },
        "cache_invalidation": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Conditions that invalidate the cache"
        },
        "cache_location": {
          "type": "string",
          "enum": [
            "local",
            "shared",
            "remote"
          ],
          "description": "Where to store the cache",
          "default": "local"
        },
        "cache_validation": {
          "type": "object",
          "description": "How to validate cached results",
          "properties": {
            "method": {
              "type": "string",
              "enum": [
                "signature",
                "timestamp",
                "content_hash",
                "none"
              ],
              "default": "signature"
            },
            "validation_command": {
              "type": "string",
              "description": "Command to validate cached result"
            }
          }
        }
      }
    },
    "validation": {
      "type": "object",
      "description": "Validation rules for this ingredient",
      "properties": {
        "pre_execution": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "post_execution": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "example_usage": {
      "type": "object",
      "description": "Example of how to use this ingredient",
      "properties": {
        "inputs": {
          "type": "object"
        },
        "expected_outputs": {
          "type": "object"
        }
      }
    }
  },
  "metadata": {
    "title": "Untitled Recipe",
    "version": "1.0.0",
    "created_by": "Claude Sonnet 4",
    "creation_date": "2025-07-07T14:50:23.576102Z",
    "last_updated": "2025-07-07T14:50:23.576102Z"
  },
  "steps": [
    {
      "step_id": "STEP-01",
      "description": "Default step - needs implementation",
      "command": "echo 'Step needs implementation'",
      "expected_output": "Step completed",
      "error_handling": "Continue on error"
    }
  ],
  "inputs": {
    "default_input": {
      "type": "string",
      "required": false,
      "default": "default_value",
      "description": "Default input parameter"
    }
  },
  "outputs": {
    "default_output": {
      "type": "string",
      "description": "Default output parameter"
    }
  }
}